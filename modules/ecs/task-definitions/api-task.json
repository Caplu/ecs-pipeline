[
    {
      "name": "simple-api",
      "image": "${image}",
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80
        }
      ],
      "cpu": 10,
      "memory": 300,
      "networkMode": "awsvpc",
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "${log_group}",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "simple-api"
        }
      },
      "environment": [
        {
          "name": "FOO",
          "value": "BAR"
        },
        {
          "name" : "PORT",
          "value": "80"
        }
      ]
    }
  ]